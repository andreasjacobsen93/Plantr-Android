<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dk.andreasjacobsen.plantr.LoadActivity"
    android:background="#4F7302">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no_bt"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cannot access bluetooth"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:layout_marginTop="17dp"
        android:textColor="#FFF"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This app requires bluetooth low energy\nto communicate with plant sensors.\nPlease check your device capabilities\nor try reinstalling the app."
        android:id="@+id/textView2"
        android:textSize="17sp"
        android:layout_marginTop="30dp"
        android:textAlignment="textStart"
        android:textColor="#FFF"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp" />
</RelativeLayout>
